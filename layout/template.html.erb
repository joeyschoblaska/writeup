<!doctype html>
<html>
  <head>
    <title><%= @document.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro:400,700|Alegreya:400italic,700italic,400,700" rel="stylesheet">
    <style>
      <%= File.read("#{@writeup_dir}/../stylesheets/compiled/writeup.css") %>
    </style>
  </head>

  <body class="no-literate">
    <div id="container">
      <div id="nav">
        <div id="header">
          <span id="logo"><%= @document.title %></span>
        </div>
        <div id="sections" class="section">
          <%= @document.toc %>
        </div>
      </div>
      <div id="content">
        <%= @document.html %>
      </div>
    </div>
  </body>
</html>
